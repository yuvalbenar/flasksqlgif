pipeline {
    agent any
    environment {
        GITHUB_REPO = 'https://github.com/yuvalbenar/flasksqlgif.git'
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Checkout the 'test' branch explicitly
                git branch: 'test', url: "$GITHUB_REPO"
            }
        }

        stage('Build') {
            steps {
                script {
                    docker.build("your_dockerhub_username/flasksqlgif")
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    docker.image("your_dockerhub_username/flasksqlgif").inside('-e FLASK_ENV=development -e PORT=5000') {
                        sh 'python -m unittest discover tests/'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    docker.withRegistry('', 'dockerhub_credentials') {
                        docker.image("your_dockerhub_username/flasksqlgif").push()
                    }
                }
            }
        }
    }
}
